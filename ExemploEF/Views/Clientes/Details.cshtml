@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Detalhes do Cliente</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nascimento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nascimento)
                </dd>
            </dl>
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                <a asp-action="Edit" asp-route-id="@Model?.ClienteID" class="btn btn-warning">Editar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}