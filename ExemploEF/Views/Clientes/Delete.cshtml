@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Excluir Cliente</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Você tem certeza que deseja deletar este cliente?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nascimento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nascimento)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="ClienteID" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

