@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Excluir Categoria</h3>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger">Tem certeza de que deseja excluir esta categoria?</h5>
            <dl class="row mt-4">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="CategoriaId" />
                <button type="submit" class="btn btn-danger">Excluir</button>
            </form>
        </div>
    </div>
</div>